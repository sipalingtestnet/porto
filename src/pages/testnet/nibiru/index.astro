---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';
import {Icon} from 'astro-icon';


const name= 'Nibiru';
const icon= 'https://pbs.twimg.com/profile_images/1556857504394526721/OyWtRrNP_400x400.jpg';
const description= 'Nibiru is a sovereign proof-of-stake blockchain, open-source platform, and member of a family of interconnected blockchains that comprise the Cosmos Ecosystem.Nibiru unifies leveraged derivatives trading, spot trading, staking, and bonded liquidity provision into a seamless user experience, enabling users of over 40 blockchains to trade with leverage using a suite of composable decentralized applications.';

const social = [
	{ label: 'Website', icon: 'tabler:world', href: ' https://nibiru.fi/' },
	{ label: 'Twitter', icon: 'tabler:brand-twitter', href: 'https://twitter.com/NibiruChain'},
  { label: 'Linkedin', icon: 'tabler:brand-linkedin', href: 'https://www.linkedin.com/company/nibiruchain' },
  { label: 'Medium', icon: 'tabler:brand-medium', href: 'https://blog.nibiru.fi/' },
	{ label: 'Discord', icon: 'tabler:brand-discord', href: 'https://discord.gg/ybVeFPxMxq' },
	{ label: 'Github', icon: 'tabler:brand-github', href: 'https://github.com/NibiruChain' },
];


const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
  
};

const items = [
  {
		title: 'Setup Guide',
		Link: '/testnet/nibiru/setup',
	},

  {
		title: 'Cheat Cli',
		Link: '/testnet/nibiru/cheat',
	},

	{
		title: 'Explorer',
		Link: 'https://itn-1.nibiru.fi/validators/nibivaloper1zxw8flz596gdg88wp8r9a24nj378wgkvkn3r7c',
	},
	
	{
		title: 'Api',
		Link: 'https://api.nibiru.spt-node.xyz/',
	},
	{
		title: 'Rpc',
		Link: 'https://rpc.nibiru.spt-node.xyz/',
	},
	{
		title: 'Peers',
		Link: '/testnet/nibiru/peers',
	},
	{
		title: 'Addrbook',
		Link: '/testnet/nibiru/addrbook',
	},
	{
		title: 'Genesis File',
		Link: '/testnet/nibiru/grpc',
	},
	{
		title: 'Snapshot',
		Link: '/testnet/nibiru/snapshot',
	},	
]	
---

<Layout {meta}>
	<section>
		<div class="max-w-6xl mx-auto px-4 sm:px-6">
			<div class="py-10">
				<div class="text-center items-center pb-5 md:pb-5 max-w-5xl mx-auto">
					<img src={icon} class="w-20 h-20 inline-block rounded-full align-text-bottom mb-1" />           
					<h1 class="text-3xl font-bold leading-tighter tracking-tighter font-mono">
					{name}
					</h1>
					<div class="text-md  leading-6 indent-5 break-normal text-left lg:text-justify justify-center md:text-justify max-w-2xl mx-auto">
						{description}
					</div>
          
				</div>
      
			
      <h2 class=" font-sans font-bold text-center">
       Social Media And Websites 	{name}
      </h2>
      <div class="flex mb-7 max-w-2xl px-4 mx-auto items-center justify-center gap-5">
        <ul class="flex">
          {
            social.map(({ label, href, icon }) => (
          
            <li>
              <a
                class="text-gray-800 hover:text-white hover:bg-gradient-to-t from-blue-400 to-sky-300 focus:outline-none focus:ring-4 focus:ring-gray-200 rounded-lg text-sm p-2 inline-flex items-center"
                aria-label={label}
                href={href}
                target="_blank"
              >
                <Icon name={icon} class="w-6 h-6" />
              </a>
              
            </li>
            ))
          }
          </ul>
          
      </div>
      
        <section class="m-5 mt-2 pt-7 border-t-2 ">
				<h1 class="font-bold font-sans text-xl lg:text-2xl md:text-2xl text-center">
					Community Tools & Services
				</h1>
       
        
        <a href="https://itn-1.nibiru.fi/validators/nibivaloper1zxw8flz596gdg88wp8r9a24nj378wgkvkn3r7c" style="display: block; text-align: center; color: blue; font-weight: bold;">Support me through your delegate üôè</a>

			</section>
      
				<div class="grid gap-6 md:grid-cols-3 lg:grid-cols-4 items-start my-10 mb-32">
					{
						items.map(({ title , Link }) => (
						<a href={Link}>  
							<div class="relative flex flex-col items-center justify-center hover:shadow-lg transition rounded-[7px] border border-slate-500 py-6 px-4 hover:text-white bg-white hover:bg-gradient-to-t from-blue-400 to-sky-300">
								<div class="flex items-center text-center">					                   
									<div class="text-xl font-mono text-center">{title}</div>                                 
								</div>
							</div>
						</a>  
						))
					}
				</div>
			</div>
		</div>
	</section>
</Layout>
