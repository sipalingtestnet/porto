---
import { Icon } from 'astro-icon';
import { getHomePermalink } from '~/utils/permalinks';

const links = [
	{
		title: 'Services',
		items: [			
			{ title: 'Explorer', href: 'https://explorer.revonode.xyz' },
			{ title: 'Relayer', href: 'https://revonode.xyz/relayer' }, 
			{ title: 'StateSync', href: 'https://revonode.xyz/statesync' },
			{ title: 'API', href: 'https://revonode.xyz/api' },
			{ title: 'RPC', href: 'https://revonode.xyz/rpc' },
			{ title: 'gRPC', href: 'https://revonode.xyz/grpc' },
		],
	},
	{
		title: 'Networks',
		items: [
			{ title: 'Mainnet', href: '#' },
			{ title: 'Testnet', href: 'https://revonode.xyz/testnet' },
			{ title: 'Archive', href: 'https://revonode.xyz/archive' },
			
		],
	},

];

const social = [
	{ label: 'Twitter', icon: 'tabler:brand-twitter', href: 'https://twitter.com/0xRevo'},
	{ label: 'Discord', icon: 'tabler:brand-discord', href: 'https://discord.com/users/758688021586772000' },
	{ label: 'Github', icon: 'tabler:brand-github', href: 'https://github.com/0xrevo' },
	{ label: 'Medium', icon: 'tabler:brand-medium', href: 'https://medium.com/@0xRevo' },
];
---

<footer class="border-t bg-gradient-to-t from-sky-800 to-sky-500">
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="grid grid-cols-12 gap-4 gap-y-8 sm:gap-8 py-8 md:py-12">
			<div class="col-span-12 lg:col-span-4">
				<div class="mb-2">
					<a class="inline-block font-bold text-xl text-white hover:text-gray-100" href={getHomePermalink()}>Revonode</a>
				</div>
				<div class="text-sm text-white">
					<a
						class="text-white hover:text-gray-100  hover:underline transition duration-150 ease-in-out"
						href="#">Terms</a
					> ·
					<a
						class="text-white hover:text-gray-100 hover:underline transition duration-150 ease-in-out"
						href="#">Privacy Policy</a
					>
				</div>
			</div>
			{
				links.map(({ title, items }) => (
					<div class="col-span-6 md:col-span-3 lg:col-span-2">
						<div class="text-white decoration-gray-300 font-bold text-lg mb-2">{title}</div>
						{items && Array.isArray(items) && items.length > 0 && (
							<ul class="text-sm">
								{items.map(({ title, href }) => (
									<li class="mb-2">
										<a
											class="text-white decoration-gray-200  hover:text-gray-100  hover:underline transition duration-150 ease-in-out"
											href={href}
										>
											{title}
										</a>
									</li>
								))}
							</ul>
						)}
			</div>	
				))
			}
	<div class="items-center lg:items-start col-span-6 lg:col-span-4">
	<div class="text-white font-bold text-lg pl-2">Follow us</div>
		<ul class="flex">
	{
		social.map(({ label, href, icon }) => (
	
		<li>
			<a
				class="text-white hover:text-sky-800  hover:bg-gray-100 focus:outline-none focus:ring-4 focus:ring-gray-200 rounded-lg text-sm p-2.5 inline-flex items-center"
				aria-label={label}
				href={href}
				target="_blank"
			>
				<Icon name={icon} class="w-7 h-7" />
			</a>
		</li>
		))
	}
	</ul>
	
	</div>
		<div>
	</div>		
	</div>
		<div class="items-center border-t border-solid border-gray-200 py-2 md:py-4">
			<!-- 	
			<ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0">
				
				{
					social.map(({ label, href, icon }) => (
						<li>
							<a
								class="text-white hover:text-sky-800  hover:bg-gray-100 focus:outline-none focus:ring-4 focus:ring-gray-200 rounded-lg text-sm p-2.5 inline-flex items-center"
								aria-label={label}
								href={href}
							>
								<Icon name={icon} class="w-5 h-5" />
							</a>
						</li>
				
					))
				}
			</ul> -->

			<div class="text-sm text-center text-white hover:text-gray-100">
				Made by Revonode ·
				All rights reserved.
			</div>
		</div>
	</div>
</footer>
